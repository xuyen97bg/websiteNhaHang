
@{

    Layout = null;
}

<!DOCTYPE html>
<html>


<head>

    @* Css của Template *@
    <script src="~/Content/js/jquery.min.js"></script>
    <link href="~/Content/css/animate.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/icomoon.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />

    <script src="~/Content/js/modernizr-2.6.2.min.js"></script>
    <script src="~/Content/js/jquery.easing.1.3.js"></script>

    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <script src="~/Content/js/main.js"></script>
    @* Css icon *@
    <link href="~/Content/css/web-fonts-with-css/css/fontawesome-all.min.css" rel="stylesheet" />
    @* Css riêng *@

    <link href="~/Content/CssBan/CssBanLayout.css" rel="stylesheet" />
    @* fontawesome *@
    <link href="~/Content/css/web-fonts-with-css/css/fontawesome-all.min.css" rel="stylesheet" />
</head>
<body>


    <div id="page">
        <nav class="fh5co-nav" role="navigation">
            <div class="container">
                <div class="fh5co-top-logo">
                    <div id="fh5co-logo">@Html.ActionLink("Trang Chủ", "Index", "Ban")</div>
                </div>
                <div class="fh5co-top-menu menu-1 text-center">

                </div>
                <div >
                    @* Form login *@
                    <button onclick="document.getElementById('id01').style.display='block'" style="float:right; border-radius:50%;"><i class="fas fa-user"></i><b>Quản trị</b></button>
                    <div id="id01" class="modal">

                        <form class="modal-content animate" action="/action_page.php">
                            <div class="imgcontainer">
                                <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
                                <img src="~/Image/login.png" alt="Avatar" class="avatar"  width="100" style="border-radius:50%;" >
                            </div>
                            @using (Html.BeginForm("Login", "Ban"))
                            {
                            <div class="container">
                                <label for="uname"><b>Tài khoản</b></label>
                                <input type="text" placeholder="Enter Username" class="input-lg" name="username" required>
                                <label for="psw"><b>Mật khẩu</b></label>
                                <input type="password" placeholder="Enter Password" class="input-lg" name="password" required>
                                <button type="submit" class="btn-block" id="btnDangNhap">Đăng nhập</button>
                            </div>
                            }
                            <div class="container" style="background-color:#f1f1f1">
                                <button type="button" onclick="document.getElementById('id01').style.display='none'" class="btn-danger">Trở lại</button>
                            </div>
                        </form>
                    </div>

                    <script>
                        // Get the modal
                        var modal = document.getElementById('id01');

                        // When the user clicks anywhere outside of the modal, close it
                        window.onclick = function (event) {
                            if (event.target == modal) {
                                modal.style.display = "none";
                            }
                        }
                    </script>
                </div>
            </div>
        </nav>

        <div class="container">
            @* Danh Sách Bàn Ăn *@
            @ViewBag.Baoloi
            @RenderBody()
            @*@Html.Action("Menu", "Menu")*@
        </div>
    </div>

</body>
</html>